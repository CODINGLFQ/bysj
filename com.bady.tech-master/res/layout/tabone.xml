    <LinearLayout
        android:id="@+id/id_activity_dict_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/id_activity_main_dict"
        android:layout_toRightOf="@id/id_activity_main_dict"
        android:orientation="vertical"
        android:visibility="gone" >

