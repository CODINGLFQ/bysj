<!--             android:layout_marginTop="10dp" -->
<!--             android:background="@drawable/button_bg" -->
<!--             android:text="3-5岁儿童词典" /> -->
    </LinearLayout>

    <TextView
        android:id="@+id/text_show_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="云"
        android:textSize="180sp" />

    <Button
        android:id="@+id/id_activity_dict_left_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/text_show_one"
        android:background="@drawable/bg_left_word" />

    <Button
        android:id="@+id/id_activity_dict_right_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/text_show_one"
        android:background="@drawable/bg_right_word" />

    <TextView
        android:id="@+id/id_activity_dict_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_show_one"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="白云"
        android:textColor="@color/green"
        android:textSize="24dp" />
    <!--         android:background="@drawable/button_bg" -->

    <TextView
        android:id="@+id/id_activity_dict_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/id_activity_dict_word"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="天上的白云飘呀飘"
        android:textColor="@color/green"
        android:textSize="24dp" />
<!--             android:background="@drawable/button_bg" -->

    <RelativeLayout
        android:id="@+id/AdLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" 
        android:layout_alignParentBottom="true" >
    </RelativeLayout>

</RelativeLayout>
</LinearLayout>